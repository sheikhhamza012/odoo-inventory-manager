    <record id="view_product_template_kanban_bom_pos" model="ir.ui.view">
      <field name="name">product.template.kanban.bom.pos</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_kanban_view"/>
      <field name="arch" type="xml">
        <!-- Insert inside the main details div -->
        <xpath expr="//div[@class='oe_kanban_details']" position="inside">
          <!-- Your BOM/POS fields here -->
          <div class="my_bom_pos_info mt-2">
            <field name="bom_count" widget="badge"/>
          </div>
        </xpath>
      </field>
    </record>


    <record id="view_product_template_search_bom_pos" model="ir.ui.view">
        <field name="name">product.template.search.bom.pos</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='consumable']" position="after">
                <filter name="has_bom" string="Has BOM" domain="[('has_bom', '=', True)]"/>
                <filter name="use_bom_in_pos" string="Uses BOM in POS" domain="[('use_bom_in_pos', '=', True)]"/>
            </xpath>
        </field>
    </record>
</odoo>
